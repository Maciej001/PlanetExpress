%div#wrap
	%div#header-region

	%div#main-region
		%div#crew-list
			%div#page-title
				%div.row
					%div.large-12.columns
						%h1 Crew
						%h4 The Crew Members of Planet Express
						%div#page-icons
							%i.accessibility.fi-torso
							%i.accessibility.fi-torso
							%i.accessibility.fi-torso

			%div.breadcrumbs-wrap
				%div.row
					%div.large-12.columns
						%ul.breadcrumbs
							%li
								%a{href: "#"}
									Home
							%li.unavailable
								%a{href: "#"}
									Crew
							%li.current
								%a{href: "#"}
									Fry

			%section
				%div.row
					%div.large-12.columns
						%div.left
							%button#new-crew.button.radius.small.secondary
								%i.general-enclosed.foundicon-plus
									Add

						%div.right
							%dl.sub-nav
								%dt Sort:
								%dd.active
									%a{href: "#"}
										Name
								%dd
									%a{href: "#"}
										Title

					%div.large-12.columns
						%form{data: {type: "new"}}
							%div.panel.radius
								%div#new-crew
									%div.row
										%div.large-12.columns
											%label What's their name?
											%input.large-6.columns{type: "text", placeholder: "Crew Member Name"}

								%footer
									%ul.inline-list
										%li
											%button.btn.small.radius{:data => {:formbutton => "primary"}} Save
										%li
											%button.btn.small.secondary.radius{:data => {:formbutton => "cancel"}} Cancel

			%div.row
				%div.large-12.columns.text-center
					%div.panel.radius
						%h2
							%small No Crew Members Found!
						p.subheader Add a crew member to get started.

			%section
				%div.large-12.columns
					%div.row
						%ul.large-12.columns
							%li.crew-member
								%div.large-3.columns.text-center
									%a.th.radius{href: "#"}
										=image_tag "fry.jpg"


								%div.large-9.columns.stats-container
									%div.row
										%div.large-6.columns
											%div.row
												%div.large-5.columns.attribute-label Age
												%div.large-7.columns 24
											%div.row
												%div.large-5.columns.attribute-label Name
												%div.large-7.columns Philip Fry
											%div.row
												%div.large-5.columns.attribute-label Title
												%div.large-7.columns Delivery Boy
											%div.row
												%div.large-5.columns.attribute-label Species
												%div.large-7.columns Human
											%div.row
												%div.large-5.columns.attribute-label Origin
												%div.large-7.columns Earth

										%div.large-6.columns
											%blockquote
												%ul.large-block-grid-2.text-center.stats
													%li
														%div
															%span.label.round 5
														%div.stat-type Completed
													%li
														%div
															%span.label.round.success $5,000
														%div.stat-type Earnings

	/ end of #main-region
	%div#push

%div#footer-region
	%footer
		%div.row
			%div.columns
				%h6.subheader Planet Express on Backbone.js & Marionette.js



